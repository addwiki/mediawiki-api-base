{
    "name": "addwiki/mediawiki-api-base",
    "type": "library",
    "description": "Simple MediaWiki API library",
    "keywords": ["Mediawiki", "API"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Addshore"
        }
    ],
    "scripts": {
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs -ps",
        "fix": "phpcbf",
        "phpunit": "phpunit tests",
        "phpunit-unit": "phpunit tests/unit",
        "phpunit-integration": "phpunit tests/integration",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit"
        ]
    },
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "~6.0|~7.0",
        "guzzlehttp/promises": "~1.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "mediawiki/mediawiki-codesniffer": "~35.0"
    },
    "suggest": {
        "etsy/phan": "Allows running static analysis on the package (requires PHP 7+)"
    },
    "autoload": {
        "psr-4": {
            "Mediawiki\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/integration/TestEnvironment.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.8-dev",
            "dev-master": "2.7-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
